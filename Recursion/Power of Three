class Solution {
public:
    bool Helper(int n, int i){

        long long int num = pow(3,i);

        if( num == n ) return true;
        if( num > n ) return false;

        return Helper(n,++i);
    }
    bool isPowerOfThree(int n) {
        if(n == 0) return false;
        if(n == 1) return true;
        return Helper(n,1);
    }
};
